<%= form_for @recipe do |f|%>
    <%=f.label "Title of receipe:"%><br>
    <%=f.text_field :title%>
    <br>
    <%=f.fields_for :ingredients do |i|%>
        <br>
        <%=i.label "Name of ingradient:"%>
        <%=i.text_field :name%>
        <%=i.label "Quantity:"%>
        <%=i.number_field :quantity%> 
        <br>
    <%end%>
    <br>
    <%=f.submit%>

   
 <%end%>